@model LoginViewModel 

@{
    ViewData["Title"] = "Log In";
}

<section class="main">
    <h1 class="title">Log In</h1>

    <form asp-action="Login" class="form">
        <div asp-validation-summary="ModelOnly" class="error"></div>

        <partial name="_LoginUser" model="@Model"/>

        <button type="submit" value="Login" class="btn">
            Ready!
        </button>

        <hr/>

        <p class="form-text">
            Do not you have an account yet?
            <a asp-action="Register">Register here</a>
        </p>
    </form>
</section>

<style>
    main {
        margin: 2rem auto;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}